<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable name="vm" type="ru.rizz.demokassa.features.mainmenu.MainMenuVM"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/topBarLayout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_50sdp"
      app:layout_constraintTop_toTopOf="parent"
      android:background="?attr/colorPrimaryVariant">

      <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/padding"
        android:src="@drawable/ic_back"
        android:visibility="@{vm.showBackButtonVM}"
        android:onClick="@{() -> vm.onBack()}"
      />

      <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        tools:text="Главное меню"
        android:gravity="center_vertical"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:text="@{vm.titleVM}"
      />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recycler"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/topBarLayout"
      app:layout_constraintBottom_toBottomOf="parent"
      android:paddingLeft="@dimen/padding"
      android:paddingRight="@dimen/padding"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/row_main_menu_item"
    />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>